<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选择时的变化 -->
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0px" android:color="@android:color/transparent" />
            <!-- 边框颜色 -->
            <solid android:color="@color/main_bg" />
            <!-- 填充色 -->
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
    <!-- When not selected, use white -->
    <item android:state_pressed="false">
        <shape>
            <stroke android:width="0px" android:color="@android:color/transparent" />
            <!-- 边框颜色 -->
            <solid android:color="@color/main_bg" />
            <!-- 填充色 -->
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
</selector>